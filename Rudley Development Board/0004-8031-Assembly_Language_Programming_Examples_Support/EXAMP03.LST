                       1    ; EXAMP03.ASM - P1 - Binary Counter
                       2    ; Started 06/06/2022
                       3    ; Uses led_driver_00 connected to the P1 port.
                       4    ; This will illuminate the eight LEDs to show the binary counter.
                       5    ; A countdown timer is used to add some delay between each count.
                       6    ;
                       7    $MOD51
                       8    $TITLE(EXAMP03.ASM)
                       9    $DATE(JUN-06-22)
                      10    $PAGEWIDTH(132)
                      11    $OBJECT(EXAMP03.HEX);
                      12    ;
  00FF                13    CDTIM1   EQU  0FFH        ; Countdown Timer 1 Initial Value for delay. 
                      14                              ; 0xFF is the maximum value.
                      15    ;
0800                  16             ORG  0800H       ; The user external rom starts at 0x0800.
0800 7900             17             MOV  R1,#000H    ; Initialize R1 to zero.         
0802 8990             18    LABEL1:  MOV  P1,R1       ; Set P1 to zero. 
0804 74FF             19             MOV  A,#CDTIM1   ; Initilize the countdown timer.
0806 6003             20    LABEL2:  JZ   LABEL3      ; If A is zero then increment the binary counter R1.
0808 14               21             DEC  A               ; Decrement the countdown timer.
0809 80FB             22             SJMP LABEL2      ; Loop to continue decrementing the timer.
080B 09               23    LABEL3:  INC  R1          ; Increment the binary counter in R1.
080C 80F4             24             SJMP LABEL1      ; Repeat the loop.             
                      25             END

